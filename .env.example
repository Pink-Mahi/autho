# Operator Configuration
OPERATOR_ID=operator-1
OPERATOR_NAME=My Operator Node
OPERATOR_PORT=3000
OPERATOR_DATA_DIR=./.operator-data

# YOUR BITCOIN ADDRESS (where you receive fees)
OPERATOR_BTC_ADDRESS=bc1q...your-address-here...

# Quorum Configuration
QUORUM_M=3
QUORUM_N=5

# Fee Distribution (Main Node gets 60%, others split 40%)
MAIN_NODE_ID=operator-1
MAIN_NODE_FEE_PERCENTAGE=60
OPERATOR_FEE_PERCENTAGE=40

# Peer Operators (comma-separated URLs)
PEER_OPERATORS=

# Bitcoin RPC (optional - for real Bitcoin integration)
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_USER=rpcuser
BITCOIN_RPC_PASSWORD=rpcpassword

# Lightning Network (optional - for Lightning integration)
LND_URL=https://localhost:8080
LND_MACAROON=your_macaroon_hex

# Protocol Configuration
PROTOCOL_TREASURY_ADDRESS=bc1q...
ANCHOR_FREQUENCY_EVENTS=1000
ANCHOR_FREQUENCY_HOURS=24

# API Configuration
API_CORS_ORIGIN=*
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info

# Network (mainnet or testnet)
BITCOIN_NETWORK=testnet
