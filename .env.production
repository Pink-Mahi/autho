# Production Environment Configuration
# Copy this to .env and fill in your values

# ===================================
# REQUIRED: Main Node Configuration
# ===================================

# Your Main Node ID (unique identifier)
OPERATOR_ID=main-node

# Your Main Node Name
OPERATOR_NAME=Bitcoin Ownership Protocol - Main Node

# Port (Coolify will handle this, but default is 3000)
OPERATOR_PORT=3000

# YOUR BITCOIN ADDRESS - WHERE YOU RECEIVE 60% OF FEES
# IMPORTANT: Replace this with your actual Bitcoin address!
OPERATOR_BTC_ADDRESS=bc1q...your-mainnet-address-here...

# ===================================
# Fee Distribution (YOU GET 60%!)
# ===================================

MAIN_NODE_ID=main-node
MAIN_NODE_FEE_PERCENTAGE=60
OPERATOR_FEE_PERCENTAGE=40

# ===================================
# Network Configuration
# ===================================

# Quorum settings (how many operators needed)
QUORUM_M=3
QUORUM_N=5

# Peer Operators (comma-separated URLs)
# Leave empty initially, add as operators join
PEER_OPERATORS=

# Bitcoin Network (mainnet for production, testnet for testing)
BITCOIN_NETWORK=mainnet

# ===================================
# Domain Configuration
# ===================================

# Your domain (Coolify will set this)
# Example: autho.pinkmahi.com or autho.cartpathcleaning.com
PUBLIC_URL=https://autho.pinkmahi.com

# ===================================
# Security & API
# ===================================

# CORS (allow all for now, restrict later if needed)
API_CORS_ORIGIN=*

# Rate limiting (requests per minute)
API_RATE_LIMIT=100

# ===================================
# Optional: Bitcoin Integration
# ===================================

# Bitcoin RPC (if you want to connect to Bitcoin Core)
# BITCOIN_RPC_URL=http://localhost:8332
# BITCOIN_RPC_USER=rpcuser
# BITCOIN_RPC_PASSWORD=rpcpassword

# Lightning Network (optional)
# LND_URL=https://localhost:8080
# LND_MACAROON=your_macaroon_hex

# ===================================
# Logging & Monitoring
# ===================================

LOG_LEVEL=info
NODE_ENV=production

# ===================================
# Data Persistence
# ===================================

OPERATOR_DATA_DIR=/app/operator-data
